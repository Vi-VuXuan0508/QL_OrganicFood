<div class="content-wrapper">
  <div class="container">
    <div class="row pad-botm">
      <div class="col-md-12">
        <h3 class="header-line">CATEGORIES LIST</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">

      </div>
      <div class="col-sm-6 text-right">
        <button type="button" class="btn btn-primary" onclick="goToAddCategory()">Add Category</button>
      </div>
    </div>&ensp;

    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>CATEGORY NAME</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each categoryList}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.categoryName}}</td>
          <td class="text-right">
            <button type="button" class="btn btn-warning" onclick="goToEditCategory('{{this._id}}')">Edit</button>
            <button type="button" class="btn btn-danger" onclick="handleDeleteCategory('{{this._id}}')">Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

