<script>
  function goToAddCategory() {
    window.location.href = '/products/add_category'
  }

  function goToEditCategory(id) {
    window.location.href = '/products/edit_category/' + id
  }

  function handleDeleteCategory(id) {
    $.ajax({
      type: "DELETE",
      url: '/products/delete_category/' + id,
      success: function (data) {
        if (data.res == true) {
          window.location.href = '/products/category_products'
        }
      }
    });
  }
</script>